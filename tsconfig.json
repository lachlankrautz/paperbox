  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "public",
    "dist",
  ]
}

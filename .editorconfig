root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80
tab_width = 4

[Makefile]
indent_style = tab

[{*.css,*.js,*.jsx,*.ts,*.tsx,*.graphqlconfig,*.graphqlrc,*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc,jest.config,*.yaml,*.yml}]
indent_size = 2

[{*.http,*.rest}]
indent_size = 0
